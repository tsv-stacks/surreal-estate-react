{
  "env": {
    "browser": true,
    "es6": true,
    "es2020": true,
    "jest": true
  },
  "extends": ["plugin:prettier/recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-underscore-dangle": [0],
    "react/jsx-props-no-spreading": [0],
    "react/prop-types": [0],
    "import/order": [1],
    "no-unused-vars": [1],
    "prettier/prettier": [
      1,
      {
        "singleQuote": true,
        "endOfLine": "auto",
        "ignoreTrailingComma": true,
        "comma-dangle": "off"
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/function-component-definition": [
      2,
      {
        "namedComponents": "arrow-function"
      }
    ]
  }
}
